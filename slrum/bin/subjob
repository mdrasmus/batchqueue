#!/usr/bin/env python

import optparse
import os
import subprocess
import sys


BATCH_CMD = 'sbatch'

args = sys.argv[1:]

if "--" in args:
    i = args.index("--")
    job_cmd = " ".join(args[i+1:])
    args = args[:i-1]
else:
    job_cmd = None

proc = subprocess.Popen([BATCH_CMD] + args, stdin=subprocess.PIPE)

if job_cmd:
    # read job from args
    proc.stdin.write(job_cmd)
    proc.stdin.close()
else:
    # read job from stdin
    for line in sys.stdin:
        proc.stdin.write(line)
